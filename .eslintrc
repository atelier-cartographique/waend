{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        no-underscore-dangle: 0,

        "strict": [2, "never"],

        "yoda": [2, "always", {
            "exceptRange": false,
            "onlyEquality": true
        }]
    },
    "env": {
        "node": true
    }
}

{
    "rules": {
        "strict": [2, "global"],
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        no-underscore-dangle: 0,

        "yoda": [2, "always", {
            "exceptRange": false,
            "onlyEquality": true
        }],
        "brace-style": [2, "stroustrup", { "allowSingleLine": false }]
    },
    "env": {
        "browser": true,
        "commonjs": true
    }
}
